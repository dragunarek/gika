<?php

$imie = stripslashes(trim($_POST["imie"]));
$nazwisko = stripslashes(trim($_POST["nazwisko"]));
$tresc = stripslashes(trim($_POST["tresc"]));
$from = 'Od: localhost';
$to = 'dragunarek13@gmail.com';
$subject = 'Hej';

if ($_POST['submit']) {
    if (mail ($to, $subject, $from, $imie, $nazwisko, $tresc)) {
        echo '<p>Your message has been sent!</p>';
    } else {
        echo '<p>Something went wrong, go back and try again!</p>';
    }
}

 ?>
